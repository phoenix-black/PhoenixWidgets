<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="50dp"
    android:layout_gravity="center"
    android:padding="5dp"
    android:id="@+id/dialog_message"
    android:background="@drawable/shape_rounded_rect_view">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/progress_small_outer_image_width"
                android:layout_height="@dimen/progress_small_outer_image_height"
                android:id="@+id/progress_smallOuterImage"
                android:src="@drawable/progress_outer_circle"
                android:contentDescription="@string/progress_outer_image"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_innerTimerText"
                android:text="0"
                android:textSize="26sp"
                android:textColor="#00ffff"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/dialogMessage_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="28sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/dialogColorPrimaryText"
            />
        </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/dialogTimer_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:text="CANCEL"
            android:textColor="#00ffff"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/dialogTimer_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:text="FINISH"
            android:textColor="#00ffff"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="22sp"/>

    </LinearLayout>

</LinearLayout>