<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="70dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:id="@+id/dialog_message"
    android:background="@drawable/pxwidget_shape_rounded_rect_view">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/progress_small_outer_image_width"
                android:layout_height="@dimen/progress_small_outer_image_height"
                android:id="@+id/progress_smallOuterImage"
                android:src="@drawable/pxwidget_progress_outer_circle"
                android:contentDescription="@string/progress_outer_image"
                android:visibility="gone"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/progress_smallInnerImage"
                android:src="@drawable/pxwidget_icon_info_2"
                android:contentDescription="@string/progress_inner_image"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/dialogMessage_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info Box"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:textColor="@color/dialogColorPrimaryText"
            />
    </LinearLayout>

    <Button
        android:id="@+id/dialogMessage_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:text="OK"
        android:textColor="#00ffff"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="24sp"/>

</LinearLayout>