<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="@dimen/progress_outer_image_width"
        android:layout_height="@dimen/progress_outer_image_height"
        android:id="@+id/progress_outerImage"
        android:src="@drawable/progress_outer_circle"
        android:contentDescription="@string/progress_outer_image"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="@dimen/progress_inner_image_width"
        android:layout_height="@dimen/progress_inner_image_height"
        android:id="@+id/progress_innerImage"
        android:src="@drawable/progress_inner_circle_02"
        android:contentDescription="@string/progress_inner_image"
        android:layout_centerInParent="true"/>

</RelativeLayout>