<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="6dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_view">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Enter the PIN"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#00ffff"/>

    <EditText
        android:id="@+id/arenaNameDialog_arenaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:textSize="28sp"
        android:padding="4dp"
        android:textColor="#00ffff"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:hint="PIN"
        android:background="@drawable/shape_input_border"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:layout_margin="6dp"
        android:layout_gravity="center"
        android:gravity="center">


        <Button
            android:id="@+id/arenaNAmeDialog_actionCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="#00ffff"
            style="?android:attr/borderlessButtonStyle"/>


        <Button
            android:id="@+id/arenaNAmeDialog_actionCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="#00ffff"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>