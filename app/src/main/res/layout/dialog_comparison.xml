<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="50dp"
    android:layout_gravity="center"
    android:id="@+id/dialog_message">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@drawable/pxwidget_shape_rounded_rect_view">

        <LinearLayout
            android:id="@+id/dialogCompare_layoutOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/pxwidget_shape_rounded_rect_view">

            <TextView
                android:id="@+id/dialogCompare_titleOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dialogColorPrimaryText"
                />
            <TextView
                android:id="@+id/dialogCompare_contentOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dialogColorPrimaryText"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialogCompare_layoutTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/pxwidget_shape_rounded_rect_view">
            <TextView
                android:id="@+id/dialogCompare_titleTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dialogColorPrimaryText"
                />
            <TextView
                android:id="@+id/dialogCompare_contentTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/dialogColorPrimaryText"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialogCompare_close"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/pxwidget_ic_cancel_black_24dp"
        android:contentDescription="Close"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>